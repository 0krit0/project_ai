# Core
FLASK_SECRET_KEY=change-this-to-a-long-random-string
FLASK_DEBUG=false
PORT=5000
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
DB_NAME=app.db

# Auth / app
ADMIN_USERNAME=admin
APP_LOGIN_PASSWORD=
SESSION_TIMEOUT_MIN=480
LOGIN_RATE_LIMIT_COUNT=6
LOGIN_RATE_LIMIT_WINDOW_SEC=300

# Model
MODEL_VERSION=damage_model.h5
NON_CAR_MODEL_ENABLED=false
NON_CAR_MODEL_PATH=car_noncar_model.h5

# Queue
QUEUE_BACKEND=local
INLINE_WORKER_ENABLED=true
REDIS_URL=redis://127.0.0.1:6379/0

# Inference controls
TOP_K_OUTCOMES=3
MAX_MULTI_IMAGES=4
TTA_ENABLED=true
TTA_VARIANTS=4
MANUAL_REVIEW_SCORE_GAP=20
MANUAL_REVIEW_MAX_ENTROPY=0.9
MANUAL_REVIEW_MAX_TTA_DISPERSION=0.085

# Upload
MAX_UPLOAD_BYTES=5242880

# Logging
APP_LOG_PATH=run.app.log

# SMTP (optional: for sending email summaries)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_USE_TLS=true
APP_BASE_URL=
PASSWORD_RESET_TOKEN_MINUTES=30
